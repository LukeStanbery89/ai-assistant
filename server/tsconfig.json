{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react-jsx"
    },
    "include": [
        "./**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}