{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "server/**/*.ts",
        "client/**/*.{ts,tsx}"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}